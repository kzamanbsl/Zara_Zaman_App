    <script>
        $(document).ready(function () {
            $('#Asset-Management').addClass('menu-open');
            $('#AssetAllocationAddAssetAllocationAndDetail').addClass('active');
            // Initialize Bootstrap Tags Input on the input field
            $('#tag').tagsinput();
