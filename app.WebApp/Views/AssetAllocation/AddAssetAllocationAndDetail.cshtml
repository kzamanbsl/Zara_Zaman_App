@model app.Services.AssetAllocationServices.AssetAllocationViewModel
@using app.Utility
@{
    ViewData["Title"] = "AddAssetAllocationAndDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sl = 0;
}

<style>
    .bootstrap-tagsinput .tag {
        margin-right: 2px;
        color: blue !important;
    }

    .bootstrap-tagsinput {
