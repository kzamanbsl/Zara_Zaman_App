@model app.Services.PurchaseOrderServices.PurchaseOrderViewModel
@using app.Utility
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active">PurchaseOrder Details</li>
            </ol>
            <div>
                <a asp-action="Index"><i class="fa fa-list"></i> Back to List</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 style="background-color:#4CAF50;color:#FFFFFF;"><b>PurchaseOrder Details</b></h5>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <tr>
                            <th>Purchase Date</th>
                            <td>@Model.PurchaseDate.ToString("dd-MM-yyyy")</td>
                            <th>Order No</th>
                            <td>@Model.OrderNo</td>
                        </tr>
                        <tr>
                            <th>Supplier</th>
                            <td>@Model.SupplierName</td>
                            <th>Storehouse</th>
                            <td>@Model.StoreName</td>
                        </tr>
                        <tr>
                            <th>PurchaseType</th>
                            <td>@Model.PurchaseTypeId</td>
                            <th>Description</th>
                            <td>@Model.Description</td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="card-body">
                <h5 style="background-color:#4CAF50;color:#FFFFFF;"><b>PurchaseOrder DetailsList</b></h5>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <tr>
                            <th>Purchase Order</th>
                            <td>@Model.OrderNo</td>
                            <th>Product</th>
                            <td>@Model.OrderStatusId</td>
                        </tr>
                        <tr>
                            <th>PurchaseQty</th>
                            <td>@Model.PurchaseOrderList</td>
                            <th>Consumption</th>
                            <td>@Model.OrderStatusName</td>
                        </tr>
                        <tr>
                            <th>UnitName</th>
                            <td>@Model.PurchaseTypeId</td>
                            <th>CostPrice</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>Sale Price</th>
                            <td>@Model.PurchaseTypeId</td>
                            <th>Discount</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>Total Amount</th>
                            <td>@Model.PurchaseTypeId</td>
                            <th>Remarks</th>
                            <td>@Model.Description</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

