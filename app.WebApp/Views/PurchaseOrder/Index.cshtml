@using app.Utility
@model app.Services.PurchaseOrderServices.PurchaseOrderViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int SN = 1;
}


@* <h1>Purchase Order List</h1> *@
<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Purchase Order List </li>
            </ol>
            <div>
                <a asp-action="AddPurchaseOrderAndDetail"><i class="fa fa-plus"></i>Add PurchaseOrder</a>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row w-100">
                    <div class="card-header">
                        <h3>
                            <i class="fas fa-list"></i>
                            All Purchase Order
                        </h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="PurchaseOrdertable" class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>SL</th>
                                <th class="text-center">Purchase Order No</th>
                                <th class="text-center">Purchase Date</th>
                                <th class="text-center">Storehouse</th>
                                <th class="text-center">Supplier Name</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Total Amount</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.PurchaseOrderList)
                            {
                                <tr>
                                    <td style="width:10px;">
                                        @(++SN)
                                    </td>
                                    <td >@item.OrderNo</td>
                                    <td>@item.PurchaseDate.ToString("dd-MM-yyyy")</td>
                                    <td>@item.Storehouse</td>
                                    <td>@item.SupplierName</td>
                                    <td>@item.OrderStatusName</td>
                                    <td>@item.TotalAmount</td>                                    
                                    <td class="text-left">
                                        @Html.ActionLink("", "UpdateRecord", new {id=item.Id},new {@title="Edit",@class = "text-warning fas fa-edit" }) |
                                        @Html.ActionLink("","Delete", new {  id=item.Id},new {@title="Delete",@class = "text-danger fas fa-trash",  onclick = "return confirm('Are you sure you want to delete this?')" })
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>

</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        $(document).ready(function () {
            $('#Configuration').addClass('menu-open');
            $('#PurchaseOrderIndex').addClass('active');
            $('#PurchaseOrdertable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                order: [[0, 'asc']],
            });
        });
    </script>
}