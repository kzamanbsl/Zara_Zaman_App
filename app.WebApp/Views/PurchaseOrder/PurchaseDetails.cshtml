@model app.Services.PurchaseOrderServices.PurchaseOrderViewModel
@using app.Utility
@{
    ViewData["Title"] = "Purchase Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sl = 0;
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
            </ol>
            <div>
                <a asp-action="Index"><i class="fa fa-list"></i> Purchase Order List </a>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">

                @if (Model.Id > 0)
                {
                    <h3 class="card-title text-info">
                        Purchase Information
                    </h3>
                }
                else
                {
                    <h3 class="card-title text-info">
                        Nothig Found
                    </h3>
                }
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="PurchaseDetails" method="get">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" class="form-control" hidden id="purchaseorderId" />
                            <input asp-for="ActionId" hidden id="actionId" />
                            <input asp-for="PurchaseOrderDetailVM.Id" class="form-control" id="purchaseOrderDetailsId" hidden />

                            @if (Model.Id > 0)
                            {
                                <div class="card-body">
                                    <div class="row rounded">
                                        <table class="table table-bordered border-primary">
                                            <tr>
                                                <th style="width:18%">Purchase No</th>
                                                <td style="width:30%">@Model.OrderNo</td>

                                                <th style="width:18%"> Purchase Date</th>
                                                <td style="width:30%">@Model.PurchaseDate.ToString("dd-MM-yyyy")</td>
                                            </tr>
                                            <tr>
                                                <th>Supplier Name</th>
                                                <td>@Model.SupplierName</td>
                                                <th style="width:18%">Store Information</th>
                                                <td style="width:30%">@Model.StoreName</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>

                            }
                            @if (Model.Id > 0)
                            {
                                <input asp-for="Id" class="form-control" hidden />
                                <div class="row">
                                <div class="col-md-5"></div>
                                <div class="col-md-2"> <p style="margin-top:20px;" class="card-title text-info text-center"><span>Purchase Details</span></p></div>
                                <div class="col-md-5"></div>
                                </div>
                                <div class="table-responsive col-md-12 text-nowrap table-bordered">
                                    <table id="KgErpDataTable" class="table caption-top">
                                        <thead class="table-light border-primary">
                                            <tr>
                                                <th style="padding:5px;text-align:center;">SL</th>
                                                <th style="padding: 5px; text-align: left;">Product</th>
                                                <th style="padding: 5px; text-align: left;">Purchase Qty</th>
                                                <th style="padding: 5px; text-align: left;">Unit</th>
                                                <th style="padding: 5px; text-align: right; ">Consumption</th>
                                                <th style="padding: 5px; text-align: right; ">Cost Price</th>
                                                <th style="padding: 5px; text-align: right; ">Sale Price</th>
                                                <th style="padding: 5px; text-align: right; ">Total Price</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model.PurchaseOrderDetailsList)
                                            {
                                                <tr>
                                                    <td style="padding:5px">@(++sl)</td>
                                                    <td style="padding:5px;text-align:left;">@item.ProductName</td>
                                                    <td style="padding: 5px; text-align: left;">@item.PurchaseQty</td>
                                                    <td style="padding:5px;text-align:left;">@String.Format("{0:0.00}", item.UnitName)</td>
                                                    <td style="padding: 5px; text-align: right;">@String.Format("{0:0.00}", item.Consumption)</td>
                                                    <td style="padding: 5px; text-align: right;">@String.Format("{0:0.00}", item.CostPrice)</td>
                                                    <td style="padding: 5px; text-align: right;">@String.Format("{0:0.00}", item.SalePrice)</td>
                                                    <td style="padding: 5px; text-align: right;">@String.Format("{0:0.00}", item.TotalAmount)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @if (Model.Id > 0 && Model.OrderStatusId == (int)PurchaseOrderStatusEnum.Draft || Model.Id > 0 && Model.OrderStatusId == (int)PurchaseOrderStatusEnum.Confirm)
                        {
                            <div class="form-group" style="float:right">
                                <button id="orderReceived" class="linkPointer btn btn-success btn-sm">Received</button>
                                <button asp-action="RejectPurchaseOrder" method="post" id="orderReject" class="linkPointer btn btn-danger btn-sm">Reject</button>
                            </div>
                        }
                        @if (Model.Id > 0 && Model.OrderStatusId == (int)PurchaseOrderStatusEnum.Reject)
                        {
                            <div class="form-group" style="float:right">
                                <h3><span style="color:red">Order Rejected</span></h3>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#Purchases').addClass('menu-open');
            $('#PurchaseOrderAddPurchaseOrderAndDetail').addClass('active');
        });

        // Reject Purchase Order
        $("#orderReject").on("click", function () {
            var id = @Model.Id;
            $.ajax({
                type: "POST",
                url: "/PurchaseOrder/RejectPurchaseOrder",
                data: { id: id },
                success: function (result) {
                    if (result) {
                        alert("Rejected successfully");
                        window.location.href = "/PurchaseOrder/Index/";

                    } else {
                        alert("Reject failed");
                    }
                },
                error: function (error) {
                    // Handle the error case here
                    console.error("Error occurred during AJAX request:", error);
                }
            });
        });

        // Purchase Order Received
        $("#orderReceived").on("click", function () {
            var id = @Model.Id;
            $.ajax({
                type: "POST",
                url: "/PurchaseOrder/AddInventory",
                data: { id: id },
                success: function (result) {
                    if (result) {
                        alert("Purchase Store In successfully");
                        window.location.href = "/PurchaseOrder/Index/";

                    } else {
                        alert("Store In failed");
                    }
                },
                error: function (error) {
                    console.error("Error occurred during Stock In:", error);
                }
            });
        });


    </script>
}



