@model app.Services.SupplierServices.SupplierViewModel
@{
    ViewData["Title"] = "UpdateRecord";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Supplier List </li>
            </ol>
            <div>
                <a asp-action="Search"><i class="fa fa-list"></i>  Supplier List </a>
            </div>
        </div>
    </div>
</div>



<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-info">
                    <i class="fas fa-plus"></i>
                    Update Supplier
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="UpdateRecord" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @Html.HiddenFor(model => model.Id)
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" required />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Phone" class="control-label"></label>
                                        <input asp-for="Phone" class="form-control" required />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" required />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label"></label>
                                        <textarea asp-for="Description" class="form-control" required rows="1"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Address" class="control-label"></label>
                                        <input asp-for="Address" class="form-control" required />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                              @*   <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="CountryName" class="control-label"></label>
                                        <select class="form-control" asp-for="CountryId" asp-items="ViewBag.Country">
                                            <option value="0" selected>-- Select Country --</option>
                                        </select>
                                    </div>
                                </div> 
                                @* <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="DivisionName" class="control-label"></label>
                                        <select class="form-control" asp-for="DivisionId" asp-items="ViewBag.Division">
                                            <option value="0" selected>-- Select Division --</option>
                                        </select>
                                    </div>
                                </div> 
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="DistrictName" class="control-label"></label>
                                        <select class="form-control" asp-for="DistrictId" asp-items="ViewBag.District">
                                            <option value="0" selected>-- Select District --</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="UpazilaName" class="control-label"></label>
                                        <select class="form-control" asp-for="UpazilaId" asp-items="ViewBag.Upazila">
                                            <option value="0" selected>-- Select Upazila --</option>
                                        </select>
                                    </div>
                                </div>*@
                            </div>
                            <div class="form-group" style="float:right">
                                <input type="submit" value="Update" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Configuration').addClass('menu-open');
            $('#SupplierSearch').addClass('active');

        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }





