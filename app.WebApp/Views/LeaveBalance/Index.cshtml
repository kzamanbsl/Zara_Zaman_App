@model app.Services.LeaveBalanceServices.LeaveBalanceViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int SN = 1;
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Leave Balance List </li>
            </ol>
            <div>
                <a asp-action="AddRecord"><i class="fa fa-plus"></i>  Add Leave Balance </a>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row w-100">
                    <div class="col-sm-3">
                        <h5> <i class="fas fa-list"></i>  All Leave Balance </h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Leave Category Name
                                </th>
                                <th>
                                    Leave Qty
                                </th>
                                <th>
                                    Description
                                </th>
                                
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.LeaveBalanceList)
                            {
                                <tr>
                                    <td>
                                        @SN
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LeaveCategoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LeaveQty)
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    
               
                                    <td class="text-center">
                                        @Html.ActionLink("", "UpdateRecord", new { id = item.Id }, new { @class = "text-danger fas fa-edit", onclick = "return confirm('Are you sure you want to edit this?')" }) |
                                        @Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "text-danger fas fa-trash", onclick = "return confirm('Are you sure you want to delete this?')" })
                                    </td>
                                </tr>
                                SN++;
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#Configuration').addClass('menu-open');
            $('#LeaveBalanceIndex').addClass('active');
        });
    </script>

}
