@model app.Services.AttendanceServices.AttendanceViewModel
@{
    ViewData["Title"] = "AddRecord";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Attendance List </li>
            </ol>
            <div>
                <a asp-action="Index"><i class="fa fa-list"></i>  Attendance List </a>
            </div>
        </div>
    </div>
</div>



<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-info">
                    <i class="fas fa-plus"></i>
                    Add Attendance
                </h3>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="AddRecord" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="form-group">
                                    <label>Employee Id</label>
                                <select class="form-control" asp-for="EmployeeId" asp-items="ViewBag.EmployeeCode">
                                    <option value="0" selected>-- Select Employee Id Type --</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AttendanceDate" class="control-label"></label>
                                    <input type="datetime-local" asp-for="AttendanceDate" class="form-control" required />
                                    <span asp-validation-for="AttendanceDate" class="text-danger"></span>
                                </div>
                            
                                <div class="form-group">
                                    <label asp-for="LoginTime" class="control-label">Login</label>
                                    <input type="time" asp-for="LoginTime" class="form-control" required />
                                    <span asp-validation-for="LoginTime" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="LogoutTime" class="control-label">Logout</label>
                                    <input type="time" asp-for="LogoutTime" class="form-control" required />
                                    <span asp-validation-for="LogoutTime" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group">
                                <label asp-for="Remarks" class="control-label">Remarks</label>
                                    <textarea asp-for="Remarks" class="form-control" required rows="2"></textarea>
                                    <span asp-validation-for="LogoutTime" class="text-danger"></span>
                                </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Configuration').addClass('menu-open');
            $('#AttendanceAddRecord').addClass('active');
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }



