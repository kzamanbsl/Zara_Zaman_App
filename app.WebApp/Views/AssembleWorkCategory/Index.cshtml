@using Microsoft.AspNetCore.Mvc.TagHelpers
@model app.Services.ATMAssemble.AssembleWorkCategoryServices.AssembleWorkCategoryViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int SN = 1;
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Assemble Work Category List</li>
            </ol>
            <div>
                <a asp-action="AddRecord"><i class="fa fa-plus"></i> Add Assemble Work Category</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5 class="text-secondary">
                    <i class="fas fa-list"></i> Assemble Work Category List
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="assembleWorkCategoryTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th class="text-center">Assemble Name</th>
                                <th class="text-center">Description</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.AssembleWorkCategoryList)
                            {
                                <tr>
                                    <td class="text-center">@SN</td>
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td class="text-left">
                                        @(item.Description != null ? Html.DisplayFor(modelItem => item.Description) : "N/A")
                                    </td>
                                    <td class="text-center">
                                        @Html.ActionLink("", "UpdateRecord", new { id = item.Id }, new { @title = "Edit", @class = "text-warning fas fa-edit" }) |
                                        @Html.ActionLink("", "Delete", new { id = item.Id }, new { @title = "Delete", @class = "text-danger fas fa-trash", onclick = "return confirm('Are you sure you want to delete this?')" })
                                    </td>
                                </tr>
                                SN++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            "use strict"

            $('#HR-\\&-Admin-').addClass('menu-open');
            $('#AssembleWorkCategoryIndex').addClass('active');

            $('#assembleWorkCategoryTable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                order: [[0, 'asc']],
            });
        });
    </script>
}