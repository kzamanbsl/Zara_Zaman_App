<div class="card-body">
    <div class="table-responsive">
        <div style="background-color:#4CAF50;color:#FFFFFF;padding:2px;">
            <h4><b>Employee Details</b></h4>
        </div>
        <table class="table table-sm table-bordered">
            <tr>
                <td style="font-weight:bold">Employee</td>
                <td>@Model.EmployeeName</td>
                <td style="font-weight:bold">Category</td>
                <td>@Model.LeaveCategoryName</td>
            </tr>
            <tr>
                <td style="font-weight:bold">Application Date</td>
                <td>@Model.ApplicationDate</td>
                <td style="font-weight:bold">Start Date</td>
                <td>@Model.StartDate</td>
            </tr>
            <tr>
                <td style="font-weight:bold">End Date</td>
                <td>@Model.EndDate</td>
                <td style="font-weight:bold">Days</td>
                <td>@Model.LeaveDays</td>
            </tr>
            <tr>
                <td style="font-weight:bold">Stay During Leave</td>
                <td>@Model.StayDuringLeave</td>
                <td style="font-weight:bold">Reason</td>
                <td>@Model.Reason</td>
            </tr>
        </table>
        <div class="container-fluid">
            <button id="Manager" class="btn btn-outline-primary">Confirm</button>
            <button id="Manager" class="btn btn-outline-success">Approve</button>
            <button id="Manager" class="btn btn-outline-danger">Reject</button>
        </div>
    </div>
</div>




