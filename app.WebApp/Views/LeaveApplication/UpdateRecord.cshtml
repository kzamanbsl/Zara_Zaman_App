@model app.Services.LeaveApplicationServices.LeaveApplicationViewModel
@{
    ViewData["Title"] = "UpdateRecord";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> LeaveApplication List </li>
            </ol>
            <div>
                <a asp-action="Index"><i class="fa fa-list"></i>  LeaveApplication List </a>
            </div>
        </div>
    </div>
</div>



<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-info">
                    <i class="fas fa-plus"></i>
                    Update LeaveApplication
                </h3>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="UpdateRecord" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @Html.HiddenFor(model => model.Id)
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Employee</label>
                                        <select class="form-control" asp-for="EmployeeId" asp-items="ViewBag.Employees" required>
                                            <option value="" selected>--Employee --</option>
                                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Manager</label>
                                        <select class="form-control" asp-for="ManagerId" asp-items="ViewBag.Managers" required>
                                            <option value="" selected>--Manager --</option>
                                            <span asp-validation-for="ManagerId" class="text-danger"></span>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Leave Category</label>
                                        <select class="form-control" asp-for="LeaveCategoryId" asp-items="ViewBag.LeaveCategories" required>
                                            <option value="0" selected>--Leave Category --</option>
                                            <span asp-validation-for="LeaveCategoryId" class="text-danger"></span>
                                        </select>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="StartDate" class="control-label"></label>
                                        <input type="date" asp-for="StartDate" class="form-control" id="txtStartDate" autocomplete="off" onchange="getLeaveDays()" required />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="EndDate" class="control-label"></label>
                                        <input type="date" asp-for="EndDate" class="form-control" id="txtEndDate" autocomplete="off" onchange="getLeaveDays()" required />
                                        <span asp-validation-for="EndDate" class="text-danger" id="endDate"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="LeaveDays" class="control-label">Leave Days</label>
                                        <input asp-for="LeaveDays" class="form-control" id="txtLeaveDays" required />
                                        <span asp-validation-for="LeaveDays" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Reason " class="control-label"></label>
                                        <textarea asp-for="Reason" class="form-control" required rows="2"></textarea>
                                        <span asp-validation-for="Reason " class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="StayDuringLeave" class="control-label">Stay During Leave</label>
                                        <textarea asp-for="StayDuringLeave" class="form-control" required rows="2"></textarea>
                                        <span asp-validation-for="StayDuringLeave" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Update" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function editField(fieldName, selectId) {
            var currentValue = $('input[name="' + fieldName + '"]').val();
            $(selectId).val(currentValue);
            $(selectId).show();
            $('input[name="' + fieldName + '"]').hide();
        }

        function editDateField(fieldName, inputId) {
            var currentValue = $('input[name="' + fieldName + '"]').val();
            $(inputId).val(currentValue);
            $(inputId).show();
            $('input[name="' + fieldName + '"]').hide();
        }
    </script>
    }