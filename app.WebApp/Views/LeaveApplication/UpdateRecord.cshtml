@model app.Services.LeaveApplicationServices.LeaveApplicationViewModel
@{
    ViewData["Title"] = "UpdateRecord";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> LeaveApplication List </li>
            </ol>
            <div>
                <a asp-action="Index"><i class="fa fa-list"></i>  LeaveApplication List </a>
            </div>
        </div>
    </div>
</div>



<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-info">
                    <i class="fas fa-plus"></i>
                    Update LeaveApplication
                </h3>

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="UpdateRecord" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @Html.HiddenFor(model => model.Id)
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="ManagerName" class="control-label"></label>
                                        <input asp-for="ManagerName" class="form-control" required />
                                        <span asp-validation-for="ManagerName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Leave Category</label>
                                        <select class="form-control" asp-for="LeaveCategoryId" asp-items="ViewBag.leaveCategory">
                                            <option value="0" selected>--Leave Category --</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="StartDate" class="control-label"></label>
                                        <input type="date" asp-for="StartDate" class="form-control" id="txtStartDate" autocomplete="off" onchange="getLeaveDays()" required />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Add more columns as needed -->

                            </div>

                            <div class="row">
                                <!-- Add more rows with three columns as needed -->

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="EndDate" class="control-label"></label>
                                        <input type="date" asp-for="EndDate" class="form-control" id="txtEndDate" autocomplete="off" onchange="getLeaveDays()" required />
                                        <span asp-validation-for="EndDate" class="text-danger" id="endDate"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="LeaveDays" class="control-label"></label>
                                        <input asp-for="LeaveDays" class="form-control" id="txtLeaveDays" required />
                                        <span asp-validation-for="LeaveDays" class="text-danger"></span>
                                    </div>
                                </div>

                                @*                                 <div class="col-md-4">
                                <div class="form-group">
                                <label asp-for="LeaveDue" class="control-label"></label>
                                <input asp-for="LeaveDue" class="form-control" required />
                                <span asp-validation-for="LeaveDue" class="text-danger"></span>
                                </div>
                                </div> *@

                            </div>


                            <!-- Add more form elements for the remaining columns as needed -->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Reason " class="control-label"></label>
                                        <input asp-for="Reason " class="form-control" required />
                                        <span asp-validation-for="Reason " class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Remarks " class="control-label"></label>
                                        <input asp-for="Remarks " class="form-control" required />
                                        <span asp-validation-for="Remarks " class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Update" class="btn btn-warning" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Configuration').addClass('menu-open');

        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }





