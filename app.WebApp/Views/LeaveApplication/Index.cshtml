@model app.Services.LeaveApplicationServices.LeaveApplicationViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int SN = 1;
}


<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Leave Application List </li>
            </ol>
            <div>
                <a asp-action="AddRecord"><i class="fa fa-plus"></i>  Add Leave Application </a>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row w-100">
                    <div class="col-sm-3">
                        <h5> <i class="fas fa-list"></i> Leave Application List </h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="leaveApplication" class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th class="text-center">Employee</th>
                                @* <th>
                                    Manager
                                </th> *@
                                <th class="text-center">Category</th>
                                <th class="text-center">Application Date</th>
                                <th class="text-center">Start Date </th>
                                <th class="text-center">End Date </th>
                                <th class="text-center">Days </th>
                                <th class="text-center">Stay During Leave</th>
                                <th class="text-center">Reason</th>
                                <th class="text-center">Status</th>

                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.LeaveApplicationList)
                            {
                                <tr>
                                    <td>
                                        @SN
                                    </td>
                                    <td> @Html.DisplayFor(modelItem => item.EmployeeName)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LeaveCategoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApplicationDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>
                                     <td>
                                        @Html.DisplayFor(modelItem => item.LeaveDays)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StayDuringLeave)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Reason)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusName)
                                    </td>
                                    <td class="text-left">
                                        @Html.ActionLink("", "UpdateRecord", new { id = item.Id }, new { @title = "Edit", @class = "text-warning fas fa-edit"}) |
                                        @Html.ActionLink("", "Delete", new { id = item.Id }, new { @title = "Delete", @class = "text-danger fas fa-trash", onclick = "return confirm('Are you sure you want to delete this?')" }) |
                                        @Html.ActionLink("", "Details", new { id = item.Id }, new { @title = "Details", @class = "text-primary fas fa-eye"})
                                    </td>
                                </tr>
                                SN++;
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#Leave').addClass('menu-open');
            $('#LeaveApplicationIndex').addClass('active');

            $('#leaveApplication').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                order: [[0, 'asc']],
            });
        });

    </script>
}

