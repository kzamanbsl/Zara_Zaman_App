@model app.Services.AssetItemServices.AssetItemViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int SN = 1;
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> AssetItem List </li>
            </ol>
            <div>
                <a asp-action="AddRecord"><i class="fa fa-plus"></i>  Add AssetItem </a>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row w-100">
                    <div class="col-sm-3">
                        <h5> <i class="fas fa-list"></i>  All AssetItem </h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="AssetItem" class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th class="text-center">Name</th>
                                <th class="text-center">Description</th>
                                <th class="text-center">TP</th>
                                <th class="text-center">Product Type</th>
                                <th class="text-center">SalePrice</th>
                                <th class="text-center">Unit</th>
                                <th class="text-center">Category</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.AssetItemList)
                            {
                                <tr>
                                    <td>
                                        @SN
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductTypeId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SalePrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UnitId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryId)
                                    </td>
                                    <td class="text-left">
                                        @Html.ActionLink("", "UpdateRecord", new { id = item.ProductTypeId}, new { @title = "Edit", @class = "text-warning fas fa-edit" }) |
                                        @Html.ActionLink("", "Delete", new { id = item.ProductTypeId}, new { @title = "Delete", @class = "text-danger fas fa-trash", onclick = "return confirm('Are you sure you want to delete this?')" })
                                    </td>
                                </tr>
                                SN++;
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#Asset Management').addClass('menu-open');
            $('#AssetItemIndex').addClass('active');

            $('#AssetItem').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                order: [[0, 'asc']],
            });
        });
    </script>
    }
