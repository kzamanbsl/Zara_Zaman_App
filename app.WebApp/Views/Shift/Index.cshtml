@model app.Services.ShiftServices.ShiftViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int SN = 1;
}

<div class="content-header">
    <div class="container-fluid ">
        <div class="breadcrumb d-flex justify-content-between align-items-center  pl-3 pr-3">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="/Admin/Index">Home</a></li>
                <li class="breadcrumb-item active"> Shift List </li>
            </ol>
            <div>
                <a asp-action="AddRecord"><i class="fa fa-plus"></i>  Add Shift </a>
            </div>
        </div>
    </div>
</div>


<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row w-100">
                    <div class="col-sm-3">
                        <h5> <i class="fas fa-list"></i>  All Shift </h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="shiftTable" class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th class="text-center">
                                    Name
                                </th>
                                <th class ="text-center">
                                    Start At
                                </th>
                                <th class="text-center">
                                    End At
                                </th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.ShiftList)
                            {
                                <tr>
                                    <td>
                                        @SN
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                   <td>
                                        @if (item.StartAt != null)
                                        {
                                            var startAt = item.StartAt;
                                            <span>@startAt.ToString("dd-MMM-yyyy")</span>
                                        }
                                        
                                    </td>
                                   <td>
                                        @if (item.EndAt != null)
                                        {
                                            var endAt = item.EndAt;
                                            <span>@endAt.ToString("dd-MMM-yyyy")</span>
                                        }
                                    </td>
                                   
                                    <td class="text-left">
                                        @Html.ActionLink("", "UpdateRecord", new {id=item.Id},new {@title="Edit", @class = "text-warning fas fa-edit",  onclick = "return confirm('Are you sure you want to edit this?')" }) |
                                        @Html.ActionLink("","Delete", new {  id=item.Id},new {@title="Delete",@class = "text-danger fas fa-trash",  onclick = "return confirm('Are you sure you want to delete this?')" })
                                    </td>
                                </tr>
                                SN++;
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#Configuration').addClass('menu-open');
            $('#ShiftIndex').addClass('active');
        });
    </script>

    <script>
        $(document).ready(function () {

            $('#shiftTable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                order: [[0, 'desc']],
            });
        });
    </script>    
    }
